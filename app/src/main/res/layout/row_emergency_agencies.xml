<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="165dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="1dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="0dp"
    app:contentPadding="1dp">

    <RelativeLayout
        android:id="@+id/forum1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:background="@drawable/shape_rec1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profileIv"
            android:layout_width="175dp"
            android:layout_height="175dp"
            android:layout_centerVertical="true"
            android:background="@color/white"
            android:scaleType="centerCrop"
            android:src="@drawable/person_gray"
            app:shapeAppearanceOverlay="@style/styleRoundedCornersImage" />

        <TextView
            android:id="@+id/nameTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/profileIv"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:maxLines="2"
            android:text="The name of the emergency agency"/>

        <TextView
            android:id="@+id/descriptionTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@id/profileIv"
            android:layout_below="@id/nameTextView1"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:maxLines="5"
            android:text="The description of the emergency agency"/>

        <TextView
            android:id="@+id/contactDetailsTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="112dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/profileIv"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:text="The telephone number of the emergency agency"/>

        <TextView
            android:id="@+id/emailTextView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="132dp"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/profileIv"
            style="@style/TextAppearance.MaterialComponents.Body2"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:text="The email address of the emergency agency"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>